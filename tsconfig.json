{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "strictNullChecks": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
