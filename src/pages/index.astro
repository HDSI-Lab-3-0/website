---
import BaseHead from '@/components/layout/BaseHead.astro';
import Footer from '@/components/layout/Footer.astro';
import Header from '@/components/layout/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts.ts';
import { Image } from 'astro:assets';
import heroImage from '@/assets/home_group.jpg';
import aboutImage from '@/assets/project-placeholder-about.jpg';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<Image src={heroImage} alt="Hero background" class="hero-background" />
				<div class="hero-overlay"></div>
				<div class="hero-content">
					<h1 class="hero-title">Build Cool Stuff. Inspire Kids.</h1>
					<p class="hero-subtitle">
						We are a hands-on innovation lab where undergraduates design robotics, circuits, and data science projects that spark STEM curiosity in K-12 students
					</p>
					<a href="/projects" class="cta-button">
						<span class="button-text">Explore Our Projects</span>
						<svg class="button-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M4.16667 10H15.8333M15.8333 10L10 4.16667M15.8333 10L10 15.8333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</a>
				</div>
			</section>

			<!-- About Us Section -->
			<section class="about-section">
				<div class="container">
					<div class="about-grid">
						<div class="about-image">
							<Image src={aboutImage} alt="About HDSI Lab" />
						</div>
						<div class="about-content">
							<h2>About Us</h2>
							<p>
								HDSI Lab 3.0 is at the forefront of educational innovation, combining advanced research methodologies
								with practical applications to solve real-world challenges in education. Our team of researchers,
								developers, and educators work collaboratively to create solutions that make learning more accessible,
								engaging, and effective for students worldwide.
							</p>
							<h3>Our Mission</h3>
							<p>
								To bridge the gap between technology and education by developing innovative tools and methodologies
								that enhance learning experiences, improve educational outcomes, and prepare students for the challenges
								of tomorrow's digital world.
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Services/Sponsors Section -->
			<section class="services-section">
				<div class="container">
					<h2 class="section-title">Our Sponsors</h2>
					<div class="sponsors-grid">
						<div class="sponsor-card">
							<div class="card-content">
								<h3>Technology Partner</h3>
								<p>Leading provider of cutting-edge educational technology solutions</p>
							</div>
						</div>
						<div class="sponsor-card">
							<div class="card-content">
								<h3>Research Foundation</h3>
								<p>Supporting innovative educational research initiatives</p>
							</div>
						</div>
						<div class="sponsor-card">
							<div class="card-content">
								<h3>Industry Collaborator</h3>
								<p>Bridging academic research with practical industry applications</p>
							</div>
						</div>
						<div class="sponsor-card">
							<div class="card-content">
								<h3>Education Grant</h3>
								<p>Funding transformative educational programs and initiatives</p>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Hero Section */
	.hero {
		position: relative;
		height: 100vh;
		min-height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 0;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.8) 100%);
		z-index: 1;
		backdrop-filter: blur(2px);
	}

	.hero-content {
		position: relative;
		z-index: 2;
		text-align: center;
		max-width: 800px;
		padding: 2rem;
	}

	.hero-title {
		font-size: clamp(2.5rem, 6vw + 1rem, 5rem);
		font-weight: 800;
		color: rgb(var(--black));
		margin-bottom: 1.5rem;
		line-height: 1.1;
		letter-spacing: -0.02em;
		background: linear-gradient(135deg, rgb(var(--black)) 0%, rgb(var(--gray-dark)) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-subtitle {
		font-size: clamp(1.125rem, 2.5vw + 0.5rem, 1.5rem);
		color: rgb(var(--gray-dark));
		margin-bottom: 3rem;
		line-height: 1.7;
		max-width: 680px;
		margin-left: auto;
		margin-right: auto;
		font-weight: 400;
	}

	.cta-button {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1.125rem 2.75rem;
		background: linear-gradient(135deg, var(--accent) 0%, #4158ff 100%);
		color: white;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.0625rem;
		border-radius: 50px;
		border: none;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 4px 20px rgba(35, 55, 255, 0.25);
		position: relative;
		overflow: hidden;
	}

	.cta-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #4158ff 0%, var(--accent) 100%);
		opacity: 0;
		transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.cta-button:hover {
		transform: translateY(-3px) scale(1.02);
		box-shadow: 0 8px 30px rgba(35, 55, 255, 0.4);
	}

	.cta-button:hover::before {
		opacity: 1;
	}

	.cta-button:active {
		transform: translateY(-1px) scale(0.98);
	}

	.button-text,
	.button-icon {
		position: relative;
		z-index: 1;
	}

	.button-icon {
		transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		flex-shrink: 0;
	}

	.cta-button:hover .button-icon {
		transform: translateX(4px);
	}

	/* About Section */
	.about-section {
		padding: 4rem 1.5rem;
		background-color: white;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.about-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
	}

	.about-image {
		position: relative;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

	.about-image:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
	}

	.about-image img {
		width: 100%;
		height: auto;
		display: block;
	}

	.about-content h2 {
		font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
		font-weight: 700;
		color: rgb(var(--black));
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	.about-content h3 {
		font-size: clamp(1.25rem, 2vw + 0.5rem, 1.5rem);
		font-weight: 600;
		color: rgb(var(--black));
		margin-top: 2rem;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.about-content p {
		font-size: 1.125rem;
		line-height: 1.8;
		color: rgb(var(--gray));
		margin-bottom: 1.5rem;
	}

	/* Services/Sponsors Section */
	.services-section {
		padding: 4rem 1.5rem;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
	}

	.section-title {
		text-align: center;
		font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
		font-weight: 700;
		color: rgb(var(--black));
		margin-bottom: 3rem;
		line-height: 1.3;
	}

	.sponsors-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.sponsor-card {
		background: white;
		border-radius: 12px;
		padding: 2rem;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
	}

	.sponsor-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
	}

	.card-content h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: rgb(var(--black));
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.card-content p {
		font-size: 1rem;
		line-height: 1.8;
		color: rgb(var(--gray));
		margin: 0;
	}

	/* Responsive Design */
	@media (min-width: 1024px) {
		.about-section,
		.services-section {
			padding: 6rem 2rem;
		}
	}

	@media (max-width: 768px) {
		.hero {
			height: 80vh;
			min-height: 500px;
		}

		.about-grid {
			grid-template-columns: 1fr;
			gap: 2.5rem;
		}

		.sponsors-grid {
			grid-template-columns: 1fr;
		}

		.about-section,
		.services-section {
			padding: 3rem 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.hero-content {
			padding: 1.5rem;
		}

		.hero-title {
			letter-spacing: -0.01em;
		}

		.cta-button {
			padding: 1rem 2.25rem;
			font-size: 1rem;
			gap: 0.5rem;
		}

		.button-icon {
			width: 18px;
			height: 18px;
		}

		.sponsor-card {
			padding: 1.5rem;
		}

		.about-section,
		.services-section {
			padding: 2.5rem 1rem;
		}
	}
</style>