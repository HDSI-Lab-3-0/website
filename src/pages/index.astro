---
import BaseHead from '@/components/layout/BaseHead.astro';
import Footer from '@/components/layout/Footer.astro';
import Header from '@/components/layout/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts.ts';
import { Image } from 'astro:assets';
import heroImage from '@/assets/home_group.jpg';
import aboutImage from '@/assets/project-placeholder-about.jpg';
import sponsors from '@/data/sponsors.json';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="relative min-h-screen flex items-center justify-center overflow-hidden lg:min-h-[600px]">
				<Image src={heroImage} alt="Hero background" class="absolute inset-0 w-full h-full object-cover z-0" />
				<div class="absolute inset-0 bg-gradient-to-br from-white/95 to-white/80 z-10 backdrop-blur-sm"></div>
				<div class="relative z-20 text-center max-w-4xl px-6 sm:px-8">
					<h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-slate-900 mb-6 leading-tight tracking-tight bg-gradient-to-br from-slate-900 to-slate-700 bg-clip-text text-transparent">
						Build Cool Stuff. Inspire Kids.
					</h1>
					<p class="text-lg sm:text-xl lg:text-2xl text-slate-700 mb-12 leading-relaxed max-w-3xl mx-auto font-normal">
						We are a hands-on innovation lab where undergraduates design robotics, circuits, and data science projects that spark STEM curiosity in K-12 students
					</p>
					<a href="/projects" class="group inline-flex items-center gap-3 py-4 px-11 bg-gradient-to-br from-blue-600 to-blue-700 text-white no-underline font-semibold text-lg rounded-full border-0 transition-all duration-300 ease-out shadow-lg hover:shadow-xl hover:-translate-y-1 hover:scale-105 active:translate-y-0 active:scale-100">
						<span>Explore Our Projects</span>
						<svg class="flex-shrink-0 transition-transform duration-300 group-hover:translate-x-1" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M4.16667 10H15.8333M15.8333 10L10 4.16667M15.8333 10L10 15.8333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</a>
				</div>
			</section>
	
			<!-- Our Mission Section -->
			<section class="py-20 px-6 bg-gradient-to-b from-white to-slate-50">
				<div class="max-w-6xl mx-auto">
					<div class="max-w-4xl mx-auto text-center">
						<h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-slate-900 mb-6 leading-tight tracking-tight">Our Mission</h2>
						<p class="text-lg lg:text-xl leading-relaxed text-slate-600 mb-10 font-normal">
							Our mission is to democratize STEM education by creating accessible, engaging, and innovative learning experiences.
							We empower undergraduate students to become educators and mentors while developing technical skills in robotics,
							circuit design, and data science. Through collaborative projects and community partnerships, we aim to:
						</p>
						<ul class="space-y-4 text-left">
							<li class="relative p-4 pl-12 bg-blue-50 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-blue-100 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Inspire K-12 students from diverse backgrounds to pursue STEM careers
							</li>
							<li class="relative p-4 pl-12 bg-blue-50 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-blue-100 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Provide undergraduate students with practical teaching and leadership experience
							</li>
							<li class="relative p-4 pl-12 bg-blue-50 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-blue-100 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Create sustainable, scalable educational resources for our community
							</li>
							<li class="relative p-4 pl-12 bg-blue-50 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-blue-100 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Bridge the gap between academic research and practical application
							</li>
						</ul>
					</div>
				</div>
			</section>
	
			<!-- Section Divider -->
			<div class="py-12 bg-white">
				<div class="max-w-6xl mx-auto h-px bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
			</div>
	
			<!-- About Us Section -->
			<section class="py-20 px-6 bg-white">
				<div class="max-w-6xl mx-auto">
					<div class="grid lg:grid-cols-2 gap-12 items-center">
						<div class="relative rounded-xl overflow-hidden shadow-md transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
							<Image src={aboutImage} alt="About HDSI Lab" class="w-full h-auto" />
						</div>
						<div>
							<h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-slate-900 mb-6 leading-tight tracking-tight">About Us</h2>
							<p class="text-lg lg:text-xl leading-relaxed text-slate-600 mb-8 font-normal">
								HDSI Lab 3.0 is a hands-on innovation lab where undergraduate students design, build, and deploy
								interactive robotics, circuits, and data science projects. We bridge the gap between higher education and
								K-12 STEM learning by creating engaging experiences that spark curiosity and inspire the next generation
								of innovators.
							</p>
						</div>
					</div>
				</div>
			</section>
	
			<!-- Section Divider -->
			<div class="py-12 bg-white">
				<div class="max-w-6xl mx-auto h-px bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
			</div>
		
			<!-- Data Science at UCSD Section -->
			<section class="py-20 px-6 bg-white">
				<div class="max-w-6xl mx-auto">
					<div class="max-w-4xl mx-auto text-center">
						<h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-slate-900 mb-6 leading-tight tracking-tight">Data Science at UCSD</h2>
						<p class="text-lg lg:text-xl leading-relaxed text-slate-600 mb-8 font-normal text-center">
							As part of UC San Diego's Halıcıoğlu Data Science Institute, we leverage cutting-edge data science methodologies
							to enhance educational experiences. Our projects integrate machine learning, data visualization, and
							computational thinking with hands-on engineering, creating a unique interdisciplinary approach to STEM
							education.
						</p>
						<ul class="space-y-4 text-left">
							<li class="relative p-4 pl-12 bg-slate-100 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-slate-200 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Machine learning applications for educational tools
							</li>
							<li class="relative p-4 pl-12 bg-slate-100 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-slate-200 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Interactive data visualization platforms
							</li>
							<li class="relative p-4 pl-12 bg-slate-100 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-slate-200 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Computational thinking curriculum development
							</li>
							<li class="relative p-4 pl-12 bg-slate-100 rounded-xl transition-all duration-300 ease-out text-lg leading-relaxed text-slate-700 hover:bg-slate-200 hover:translate-x-1 hover:shadow-md before:content-['•'] before:absolute before:left-4 before:top-1/2 before:-translate-y-1/2 before:text-slate-700 before:text-2xl before:font-bold before:leading-none">
								Hands-on engineering workshops
							</li>
						</ul>
					</div>
				</div>
			</section>
	
			<!-- Services/Sponsors Section -->
			<section class="py-16 px-6 bg-gradient-to-b from-slate-50 to-white">
				<div class="max-w-6xl mx-auto">
					<h2 class="text-center text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-12 leading-tight">Our Sponsors</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{sponsors.sponsors.map((sponsor) => (
							<div class="bg-white rounded-xl p-8 shadow-md transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
								<div>
									<h3 class="text-xl font-semibold text-slate-900 mb-4 leading-tight">{sponsor.name}</h3>
									<p class="text-base leading-relaxed text-slate-600 m-0">{sponsor.description}</p>
								</div>
							</div>
						))}
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>