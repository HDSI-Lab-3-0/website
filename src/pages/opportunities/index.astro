			document.addEventListener('DOMContentLoaded', () => {
			  // Reading progress bar
			  const progressBar = document.getElementById('reading-progress');
			  
			  function updateReadingProgress() {
				  const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
				  const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
				  const progress = (scrollTop / scrollHeight) * 100;
				  progressBar.style.width = progress + '%';
			  }
			  
			  window.addEventListener('scroll', updateReadingProgress);
			  updateReadingProgress();
			  
			  // Calculate reading time
			  const markdownContent = document.querySelector('.markdown-content');
			  if (markdownContent) {
			   const text = markdownContent.textContent || '';
			   const wordsPerMinute = 200;
			   const wordCount = text.trim().split(/\s+/).length;
			   const readingTime = Math.ceil(wordCount / wordsPerMinute);
			   
			   const readingTimeText = document.getElementById('reading-time-text');
			   if (readingTimeText) {
			    readingTimeText.textContent = `${readingTime} min read`;
			   }
			  }
			  
				});
		</script>
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				// Tab functionality
				const tabButtons = document.querySelectorAll('.tab-button');
				const tabPanes = document.querySelectorAll('.tab-pane');

				function switchTab(targetTab: string) {
					// Hide all tab panes
					tabPanes.forEach(pane => {
						pane.style.display = 'none';
						pane.classList.remove('active');
					});

					// Reset all button styles
					tabButtons.forEach(button => {
						button.classList.remove('bg-[rgba(var(--gray),0.1)]', 'text-[rgb(var(--black))]', 'border-[rgba(var(--gray),0.2)]', 'font-semibold');
						button.classList.add('bg-[rgb(var(--white))]', 'text-[rgba(var(--text-color),0.7)]', 'border-[rgba(var(--gray),0.15)]', 'font-medium');
					});

					// Show selected tab pane and activate button
					const activePane = document.getElementById(targetTab);
					const activeButton = document.querySelector(`[data-tab="${targetTab}"]`);
					
					if (activePane && activeButton) {
						activePane.style.display = 'block';
						activePane.classList.add('active');
						
						// Update button styles
						activeButton.classList.remove('bg-[rgb(var(--white))]', 'text-[rgba(var(--text-color),0.7)]', 'border-[rgba(var(--gray),0.15)]', 'font-medium');
						activeButton.classList.add('bg-[rgba(var(--gray),0.1)]', 'text-[rgb(var(--black))]', 'border-[rgba(var(--gray),0.2)]', 'font-semibold');
					}
				}

				// Add click event listeners to tab buttons
				tabButtons.forEach(button => {
					button.addEventListener('click', (event: Event) => {
						const targetTab = (event.target as HTMLElement).getAttribute('data-tab');
						if (targetTab) {
							switchTab(targetTab);
						}
					});
				});

				// Initialize with first tab active
				switchTab('k12-students');
			});
		</script>
