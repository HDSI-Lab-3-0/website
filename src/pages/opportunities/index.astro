---
import BaseHead from '@/components/layout/BaseHead.astro';
import Footer from '@/components/layout/Footer.astro';
import Header from '@/components/layout/Header.astro';

const audiences = [
	{
		id: 'k12-students',
		title: 'K–12 Students',
		description:
			'Participate in Lab 3.0 experiences through school or family involvement. Programs arranged through teachers, or inquire about special events.',
		icon: 'graduation-cap',
	},
	{
		id: 'k12-teachers',
		title: 'K–12 Teachers',
		description:
			'Professional development, classroom visits, and hands-on curriculum aligned with NGSS standards. Data science and engineering for your classroom.',
		icon: 'school',
	},
	{
		id: 'k12-families',
		title: 'K–12 Families',
		description:
			'On-campus summer programs and workshops introducing students to robotics, circuits, and data science through hands-on activities.',
		icon: 'users',
	},
	{
		id: 'undergraduate-students',
		title: 'Undergrad Students',
		description:
			'Join as Lab Fellows with experience in technical design, teaching, and leadership. Paid academic-year roles and volunteer opportunities.',
		icon: 'user',
	},
	{
		id: 'faculty-staff',
		title: 'Faculty & Staff',
		description:
			'Collaborate on grant-supported educational components and translate research into hands-on learning. Internal workshops available.',
		icon: 'briefcase',
	},
];

const benefits = [
	{ title: 'Hands-on Experience', desc: 'Work with real robotics hardware and data science tools' },
	{ title: 'Mentorship', desc: 'Learn from experienced researchers and educators' },
	{ title: 'Community Impact', desc: 'Make a difference in local K-12 STEM education' },
	{ title: 'Professional Growth', desc: 'Build skills for careers in tech and education' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title="Opportunities"
			description="Join HDSI Lab 3.0 and help inspire the next generation of STEM innovators. Research, mentorship, and project development roles available."
		/>
	</head>

	<body class="bg-slate-50">
		<Header />

		<main>
			<!-- Compact Hero -->
			<section class="bg-white border-b border-slate-200">
				<div class="max-w-6xl mx-auto px-6 py-8">
					<div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
						<div>
							<p class="text-xs font-bold tracking-widest text-blue-600 uppercase mb-2">Get Involved</p>
							<h1 class="text-3xl md:text-4xl font-bold text-slate-900 tracking-tight">Opportunities</h1>
						</div>
						<p class="text-sm text-slate-600 max-w-md leading-relaxed">
							Join our community of UC San Diego students creating hands-on robotics and data science experiences for K-12 learners.
						</p>
					</div>
				</div>
			</section>

			<!-- Audience Categories Grid -->
			<section class="max-w-6xl mx-auto px-6 py-6">
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-3">
					{audiences.map((audience) => (
						<article
							class="group bg-white rounded-lg p-4 border border-slate-200 hover:border-blue-300 hover:shadow-sm transition-all duration-200 flex flex-col"
						>
							<div class="flex items-center gap-2 mb-2">
								{audience.icon === 'graduation-cap' && (
									<svg class="w-4 h-4 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 10v6M2 10l10-5 10 5-10 5z" />
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12v5c3 3 9 3 12 0v-5" />
									</svg>
								)}
								{audience.icon === 'school' && (
									<svg class="w-4 h-4 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
									</svg>
								)}
								{audience.icon === 'users' && (
									<svg class="w-4 h-4 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
									</svg>
								)}
								{audience.icon === 'user' && (
									<svg class="w-4 h-4 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
									</svg>
								)}
								{audience.icon === 'briefcase' && (
									<svg class="w-4 h-4 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
									</svg>
								)}
								<h3 class="font-semibold text-slate-900 text-sm leading-tight">{audience.title}</h3>
							</div>
							<p class="text-xs text-slate-600 leading-relaxed flex-1">{audience.description}</p>
						</article>
					))}
				</div>
			</section>

			<!-- Benefits Bar -->
			<section class="bg-white border-y border-slate-200">
				<div class="max-w-6xl mx-auto px-6 py-5">
					<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
						{benefits.map((benefit) => (
							<div class="flex items-start gap-2">
								<div class="flex-shrink-0 w-1.5 h-1.5 rounded-full bg-blue-500 mt-1.5" />
								<div>
									<p class="font-semibold text-slate-900 text-sm">{benefit.title}</p>
									<p class="text-xs text-slate-500 mt-0.5">{benefit.desc}</p>
								</div>
							</div>
						))}
					</div>
				</div>
			</section>

			<!-- CTA Section -->
			<section class="max-w-6xl mx-auto px-6 py-6">
				<div class="bg-white rounded-lg p-5 border border-slate-200 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
					<div>
						<h2 class="text-lg font-bold tracking-tight mb-0.5 text-slate-900">Ready to Get Started?</h2>
						<p class="text-sm text-slate-600 leading-relaxed max-w-md">
							Tell us about your background, skills, and interests. We'll match you with the right opportunity.
						</p>
					</div>
					<a
						href="https://forms.gle/ZJpHG1mCB6ShiYJy9"
						target="_blank"
						rel="noopener noreferrer"
						class="flex-shrink-0 inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-md font-medium text-sm transition-colors duration-200 hover:bg-blue-700"
					>
						<span>Apply Now</span>
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
						</svg>
					</a>
				</div>
			</section>

			<!-- FAQ / Info Section -->
			<section class="max-w-6xl mx-auto px-6 pb-10">
				<div class="grid md:grid-cols-3 gap-3">
					<div class="md:col-span-2 bg-white rounded-lg p-4 border border-slate-200">
						<h3 class="font-semibold text-slate-900 text-sm mb-2 flex items-center gap-2">
							<svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							Who Can Apply?
						</h3>
						<ul class="space-y-2 text-sm text-slate-600">
							<li class="flex items-start gap-2.5">
								<svg class="w-4 h-4 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span class="leading-relaxed">Current UC San Diego undergraduate students from any major</span>
							</li>
							<li class="flex items-start gap-2.5">
								<svg class="w-4 h-4 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span class="leading-relaxed">No prior robotics experience required—just enthusiasm for STEM education</span>
							</li>
							<li class="flex items-start gap-2.5">
								<svg class="w-4 h-4 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span class="leading-relaxed">Students interested in gaining teaching and research experience</span>
							</li>
						</ul>
					</div>

					<div class="bg-blue-50 rounded-lg p-4 border border-blue-100">
						<h3 class="font-semibold text-slate-900 text-sm mb-2 flex items-center gap-2">
							<svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
							</svg>
							Location
						</h3>
						<p class="text-sm text-slate-600 leading-relaxed">
							HDSI Lab 3.0<br />
							Halıcıoğlu Data Science Institute<br />
							UC San Diego<br />
							<span class="text-blue-600 text-xs mt-1 block">La Jolla, CA</span>
						</p>
					</div>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
