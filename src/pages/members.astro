---
import BaseHead from '../components/layout/BaseHead.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import "../styles/global.css";
import { SITE_DESCRIPTION } from '../consts.ts';
import membersData from '../data/members.json';

// Define type for member
interface Member {
  name: string;
  role: string;
  image: string;
  bio: string;
  category: string;
}

// Define category hierarchy for display
const displayCategoryOrder = ['director', 'lab-fellow', 'volunteer'];

// Define seniority order within each category (senior first)
const seniorityOrder: Record<string, string[]> = {
  'lab-fellow': ['senior-lab-fellow', 'lab-fellow'],
  'volunteer': ['senior-volunteer', 'volunteer']
};

// Sort members by category hierarchy, then by seniority, then alphabetically by name
const sortedMembers = [...membersData.members as Member[]].sort((a, b) => {
  // Map original categories to display categories
  const getDisplayCategory = (category: string) => {
    if (category === 'senior-lab-fellow' || category === 'lab-fellow') return 'lab-fellow';
    if (category === 'senior-volunteer' || category === 'volunteer') return 'volunteer';
    return category;
  };
  
  const displayCategoryA = getDisplayCategory(a.category);
  const displayCategoryB = getDisplayCategory(b.category);
  
  // First sort by display category
  const categoryOrderA = displayCategoryOrder.indexOf(displayCategoryA);
  const categoryOrderB = displayCategoryOrder.indexOf(displayCategoryB);
  
  if (categoryOrderA !== categoryOrderB) {
    return categoryOrderA - categoryOrderB;
  }
  
  // Then sort by seniority within the category
  if (displayCategoryA === 'lab-fellow' || displayCategoryA === 'volunteer') {
    const seniorityA = seniorityOrder[displayCategoryA]?.indexOf(a.category) ?? -1;
    const seniorityB = seniorityOrder[displayCategoryB]?.indexOf(b.category) ?? -1;
    
    if (seniorityA !== seniorityB) {
      return seniorityA - seniorityB;
    }
  }
  
  // Finally sort alphabetically by name
  return a.name.localeCompare(b.name);
});

// Group members by display category
const director = sortedMembers.filter(m => m.category === 'director');
const labFellows = sortedMembers.filter(m => m.category === 'senior-lab-fellow' || m.category === 'lab-fellow');
const volunteers = sortedMembers.filter(m => m.category === 'senior-volunteer' || m.category === 'volunteer');
---

<html lang="en">
  <head>
    <BaseHead title="Members" description={SITE_DESCRIPTION} />
    <style>
      .member-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .member-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
      }

      .member-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 100%; /* 1:1 aspect ratio */
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }

      .member-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .member-content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
      }

      .member-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 0.25rem;
      }

      .member-role {
        font-size: 0.875rem;
        color: #667eea;
        font-weight: 500;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .member-bio {
        font-size: 0.95rem;
        color: #4a5568;
        line-height: 1.6;
        flex-grow: 1;
      }

      .director-card {
        max-width: 500px;
        margin: 0 auto;
      }

      .director-card .member-image-wrapper {
        padding-top: 100%;
      }

      .director-card .member-content {
        padding: 2rem;
      }

      .director-card .member-name {
        font-size: 1.75rem;
      }

      .director-card .member-role {
        font-size: 1rem;
      }

      .director-card .member-bio {
        font-size: 1.05rem;
      }

      .members-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      }

      @media (min-width: 768px) {
        .members-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 1024px) {
        .members-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      @media (min-width: 1280px) {
        .members-grid {
          grid-template-columns: repeat(4, 1fr);
        }
      }

      .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1a202c;
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
        padding-bottom: 1rem;
      }

      .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
      }

      .page-title {
        font-size: 3rem;
        font-weight: 800;
        color: #1a202c;
        margin-bottom: 1rem;
        text-align: center;
      }

      .page-subtitle {
        font-size: 1.125rem;
        color: #4a5568;
        text-align: center;
        margin-bottom: 3rem;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
      }

      .section-spacer {
        margin-bottom: 4rem;
      }

      @media (max-width: 640px) {
        .page-title {
          font-size: 2rem;
        }

        .section-title {
          font-size: 1.5rem;
        }

        .members-grid {
          gap: 1.5rem;
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <main class="container mx-auto py-10 px-4 max-w-7xl">
      <h1 class="page-title">Lab Members</h1>
      <p class="page-subtitle">
        Meet our dedicated team of researchers and innovators pushing the boundaries of robotics and technology.
      </p>

      {director.length > 0 && (
        <section class="section-spacer">
          <h2 class="section-title">Director</h2>
          <div class="director-card member-card">
            <div class="member-image-wrapper">
              <img
                src={director[0].image}
                alt={director[0].name}
                class="member-image"
              />
            </div>
            <div class="member-content">
              <h3 class="member-name">{director[0].name}</h3>
              <p class="member-role">{director[0].role}</p>
              <p class="member-bio">{director[0].bio}</p>
            </div>
          </div>
        </section>
      )}

      {labFellows.length > 0 && (
        <section class="section-spacer">
          <h2 class="section-title">Lab Fellows</h2>
          <div class="members-grid">
            {labFellows.map(fellow => (
              <div class="member-card">
                <div class="member-image-wrapper">
                  <img
                    src={fellow.image}
                    alt={fellow.name}
                    class="member-image"
                  />
                </div>
                <div class="member-content">
                  <h3 class="member-name">{fellow.name}</h3>
                  <p class="member-role">{fellow.role}</p>
                  <p class="member-bio">{fellow.bio}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      {volunteers.length > 0 && (
        <section>
          <h2 class="section-title">Volunteers</h2>
          <div class="members-grid">
            {volunteers.map(volunteer => (
              <div class="member-card">
                <div class="member-image-wrapper">
                  <img
                    src={volunteer.image}
                    alt={volunteer.name}
                    class="member-image"
                  />
                </div>
                <div class="member-content">
                  <h3 class="member-name">{volunteer.name}</h3>
                  <p class="member-role">{volunteer.role}</p>
                  <p class="member-bio">{volunteer.bio}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </main>

    <Footer />
  </body>
</html>