---
import { getCollection } from 'astro:content';
import BaseHead from '@/components/layout/BaseHead.astro';
import Footer from '@/components/layout/Footer.astro';
import Header from '@/components/layout/Header.astro';
import EventsApp from '@/components/events/EventsApp.tsx';
import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts.ts';

const events = (await getCollection('events')).sort(
	(a, b) => b.data.eventDateStart.valueOf() - a.data.eventDateStart.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - Events`} description={`${SITE_DESCRIPTION} - Upcoming and past events`} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@heroui/theme@latest/dist/index.min.css" />
	</head>
	<body class="events-page">
		<Header />
		
		<!-- Hero Section -->
		<header class="bg-gradient-to-r from-blue-50 to-indigo-100 border-b border-blue-200">
			<div class="mx-auto w-full max-w-[1400px] px-6 py-12">
				<div class="text-center mb-8">
					<h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4">
						Events
					</h1>
					<p class="text-lg text-blue-700 max-w-3xl mx-auto">
						Discover upcoming events, workshops, and activities in our educational community
					</p>
				</div>
				
				<!-- Quick stats bar -->
				<div class="flex flex-wrap justify-center gap-8 text-center">
					<div class="flex flex-col">
						<span class="text-2xl font-bold text-blue-600">{events.length}</span>
						<span class="text-sm text-blue-500">Total Events</span>
					</div>
					<div class="flex flex-col">
						<span class="text-2xl font-bold text-green-600" id="upcoming-count">0</span>
						<span class="text-sm text-blue-500">Upcoming</span>
					</div>
					<div class="flex flex-col">
						<span class="text-2xl font-bold text-gray-600" id="past-count">0</span>
						<span class="text-sm text-blue-500">Past Events</span>
					</div>
				</div>
			</div>
		</header>

		<main class="events-page-main">
			<div class="mx-auto w-full max-w-[1400px] px-4 py-12">
				<EventsApp client:load events={events} />
			</div>
		</main>
		<Footer />
	</body>
</html>