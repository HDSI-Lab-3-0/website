---
import BaseHead from '../components/layout/BaseHead.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import "../styles/global.css";
import { SITE_DESCRIPTION } from '../consts.ts';
---

<html lang="en">
  <head>
    <BaseHead title="Donate" description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main class="constrained-main">
      <div class="content-page">
        <header class="page-header">
          <h1>Donate</h1>
          <p class="page-description">Support our work and help us continue our mission</p>
        </header>
        
        <div class="content-section">
          <p class="lead-text">Your generous donations help us continue our research and educational initiatives. We appreciate your support in advancing our mission.</p>
          
          <div class="donation-info">
            <h2>How to Donate</h2>
            <p>Donation mechanisms and information will be available here soon.</p>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>
