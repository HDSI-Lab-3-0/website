---
import { SITE_TITLE } from '../../consts';
import HeaderLink from './HeaderLink.astro';
import { Icon } from '../ui/Icon';
import MobileNavigation from './MobileNavigation.tsx';
import OpportunitiesDropdown from './OpportunitiesDropdown.tsx';
---

<header class="sticky-header">
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		
		<!-- Desktop Navigation -->
		<div class="internal-links desktop-only">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/members">Members</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<OpportunitiesDropdown client:load />
			<HeaderLink href="/contact">Contact</HeaderLink>
			<HeaderLink href="/donate">Donate</HeaderLink>
		</div>
		
		<!-- Mobile Navigation -->
		<div class="mobile-nav-container">
			<MobileNavigation client:load />
		</div>
		
		<div class="social-links desktop-only">
			<a href="https://github.com/HDSI-Lab-3-0/website" target="_blank">
				<span class="sr-only">Go to HDSI Lab GitHub repo</span>
				<Icon icon="Github" size={20} className="text-gray-600 hover:text-gray-900" />
			</a>
		</div>
	</nav>
</header>
<style>
	.sticky-header {
		position: sticky;
		top: 0;
		z-index: 100;
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}
	.internal-links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}
	
	.desktop-only {
		display: block;
	}
	
	.mobile-nav-container {
		display: none;
	}
	nav a {
		padding: 1.5rem 0.5rem 0 0.5rem;
		color: rgb(var(--black));
		text-decoration: none;
		font-weight: 400;
		transition: all 0.2s ease;
		position: relative;
		padding-bottom: 1.5rem;
	}
	nav a::after {
		content: "";
		position: absolute;
		bottom: 1.4rem;
		left: 0.5rem;
		right: 0.5rem;
		height: 2px;
		background-color: transparent;
		transition: all 0.2s ease;
	}
	nav a:hover::after {
		background-color: var(--accent);
	}
	nav a.active::after {
		background-color: var(--accent);
	}
	nav a.active {
		font-weight: 700;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.desktop-only {
			display: none;
		}
		
		.mobile-nav-container {
			display: block;
		}
		
		.internal-links {
			display: none;
		}
		
		nav a {
			padding: 1rem 0.25rem 0 0.25rem;
			padding-bottom: 1rem;
			font-size: 0.9rem;
		}
		nav a::after {
			bottom: 0.9rem;
			left: 0.25rem;
			right: 0.25rem;
		}
	}
</style>
